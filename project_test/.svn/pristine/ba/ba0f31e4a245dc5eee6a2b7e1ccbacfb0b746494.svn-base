local UnionLayer = class("UnionLayer",function ()
	return display.newNode()
end)

local GafNode = import("app.ui.GafNode")

function UnionLayer:ctor()
    self:createStageInfo()
end

function UnionLayer:createStageInfo()
    createOutlineLabel({text = "公告牌"}):pos(270,520):addTo(self)
    local des = base.TalkLabel.new({
                text  = "这里是公告具体内容，具体可以写多少字，要问问设计者，暂定五十字就好！",
                size  = 22,
                dimensions = cc.size(160, 0),
            })
    des:pos(215, 470 - 22*des:getLines())
    des:addTo(self)

    local param = {gaf = "TheStone",width = 150,height = 500,callback = function ()
        NetHandler.gameRequest("GetUnionSignInfo")
        print("礼拜...")
    end}
    self.chapterGaf = GafNode.new(param)
    self.chapterGaf:playAction("on",true)
    self.chapterGaf:setGafPosition(110, 140)
	self.chapterGaf:setScale(0.8)
    self:addChild(self.chapterGaf,1)

    local param = {gaf = "TheStone",width = 150,height = 500,callback = function ()
        app:pushToScene("UnionHallScene")
        print("大厅...")
    end}
    self.chapterGaf1 = GafNode.new(param)
    self.chapterGaf1:playAction("on",true)
    self.chapterGaf1:setGafPosition(330, 20)
	self.chapterGaf1:setScale(0.8)
    self:addChild(self.chapterGaf1,2)

    local param = {gaf = "TheStone",width = 150,height = 500,callback = function ()
        NetHandler.gameRequest("OpenShop",{param1 = 9})    -- 发送请求进入商店
        print("公会商店...")
    end}
    self.chapterGaf2 = GafNode.new(param)
    self.chapterGaf2:playAction("on",true)
    self.chapterGaf2:setGafPosition(470, 300)
	self.chapterGaf2:setScale(0.8)
    self:addChild(self.chapterGaf2,1)

    local param = {gaf = "TheStone",width = 150,height = 500,callback = function ()
        print("战争之地...")
    end}
    self.chapterGaf3 = GafNode.new(param)
    self.chapterGaf3:playAction("on",true)
    self.chapterGaf3:setGafPosition(650, 200)
	self.chapterGaf3:setScale(0.8)
    self:addChild(self.chapterGaf3,1)

    local param = {gaf = "TheStone",width = 150,height = 500,callback = function ()
        print("公会副本...")
    end}
    self.chapterGaf4 = GafNode.new(param)
    self.chapterGaf4:playAction("on",true)
    self.chapterGaf4:setGafPosition(820, 140)
	self.chapterGaf4:setScale(0.8)
    self:addChild(self.chapterGaf4,1)
end

return UnionLayer
