-- 查看成员信息
function UnionHallScene:createUnionMemberLayer()
    self.unionHallLayer.listView:setTouchEnabled(false)
    self.unionMemberLayer = UnionMemberLayer.new() -- 传入指定成员信息表
    self.unionMemberLayer:addTo(self, 10)
